<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách các chủ đề</title>
  <link rel="stylesheet" href="/css/class.css">
</head>
<body>
  <div class="container">
    <h1>Danh sách các chủ đề cho lớp <%= classCode %> - Môn học: <%= subject %></h1>
    <table>
      <thead>
        <tr>
          <th>STT</th>
          <th>Tên chủ đề</th>
          <th>Mô tả</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% topics.forEach((topic, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= topic.name %></td>
            <td><%= topic.description %></td>
            <td><button onclick="viewMaterials('<%= topic.id %>')">Xem học liệu</button></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script>
      function viewMaterials(classCode, topicId) {
        window.location.href = `/materials?classCode=${classCode}&topicId=${topicId}`; 
      }
  </script>
</body>
</html>
